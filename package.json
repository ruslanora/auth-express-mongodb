{
  "name": "auth",
  "version": "0.1.0",
  "description": "An authentication service in TypeScript",
  "repository": {
    "type": "git",
    "url": "https://github.com/ruslanora/auth"
  },
  "author": "Ruslan Orazliev",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --inspect",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "lint:check": "tsc --noEmit && eslint \"**/*.{js,ts}\"",
    "prepare": "husky",
    "start": "node dist/server.js",
    "test": "NODE_ENV=test jest --forceExit --coverage --verbose",
    "test:watch": "NODE_ENV=test jest --coverage --verbose --watchAll"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "errorhandler": "^1.5.1",
    "express": "^4.18.3",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "winston": "^3.12.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/errorhandler": "^1.5.1",
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.7",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/node": "^16.18.60",
    "@types/supertest": "^2.0.15",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.0.2",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-prettier": "^5.2.2",
    "husky": "^9.0.10",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20"
  }
}
